<%= render 'shared/header' %>

<div class="max-w-6xl mx-auto py-8 px-4">
  <div class="space-y-10">
    <% @standings.each do |standing| %>
      <div class="bg-gray-50 shadow-md rounded-lg p-4 mb-4">
        <h2 class="text-xl font-bold text-gray-800 mb-2">
          <% if standing[:rank] == 1 %>
            第<%= standing[:rank] %>位🥇<%= standing[:name] %>
          <% elsif standing[:rank] == 2 %>
            第<%= standing[:rank] %>位🥈<%= standing[:name] %>
          <% elsif standing[:rank] == 3 %>
            第<%= standing[:rank] %>位🥉<%= standing[:name] %>
          <% else %>
            第<%= standing[:rank] %>位：<%= standing[:name] %>
          <% end %>
        </h2>
        <div class="border border-gray-200 rounded-lg p-4 mb-4 bg-blue-50">
          <h3 class="text-l font-bold text-gray-800 mb-2">勝率: <%= standing[:win_rate] %></h3>
          <p class="text-gray-600">勝利数：<%= standing[:wins] %></p>
          <p class="text-gray-600">敗北数：<%= standing[:losses] %></p>
        </div>
        <div class="border border-gray-200 rounded-lg p-4 bg-green-50">
          <h3 class="text-l font-bold text-gray-800 mb-2">ゲーム取得率: <%= standing[:game_win_rate] %></h3>
          <p class="text-gray-600">得ゲーム数：<%= standing[:games_won] %></p>
          <p class="text-gray-600">失ゲーム数： <%= standing[:games_lost] %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-10 text-center">
    <%= link_to event_path(@event), class: "inline-flex items-center bg-gray-500 text-white py-2 px-6 rounded-lg hover:bg-gray-600 transition-colors" do %>
      試合結果画面に戻る
    <% end %>
  </div>
</div>
