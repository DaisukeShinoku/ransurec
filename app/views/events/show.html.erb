<h1><%= @event.name %></h1>
<div class="absolute top-0 left-0 w-full h-48 z-20">
<%= render "form", locals: { event: @event, status: @status } %>
</div>
<div class="relative" id="matches">
  <%= button_to "編集", display_form_event_path(@event), remote: true , class:"px-6 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-lg hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" %>
  <%= turbo_frame_tag "event_#{@event.id}" do %>
    <%= render "replace_match", event: @event %>
  <% end %>
</div>
