<div class="max-w-6xl mx-auto py-8 px-4">
  <div class="bg-gradient-to-r from-indigo-600 to-blue-500 rounded-lg shadow-lg mb-8 p-6">
    <h1 class="text-3xl font-bold text-white"><%= @event.name %></h1>
    <p class="text-indigo-100 mt-2">コート数: <%= @event.number_of_coats %>面 | 試合形式: <%= t("enums.event.match_format.#{@event.match_format}") %></p>
  </div>

  <% if notice.present? %>
    <div class="bg-green-100 text-green-700 p-4 rounded-lg mb-6">
      <%= notice %>
    </div>
  <% end %>
  
  <% if alert.present? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-lg mb-6">
      <%= alert %>
    </div>
  <% end %>

  <!-- 選手名編集ダイアログ -->
  <div data-controller="player-name" class="mb-6">
    <%= button_to(show_player_name_dialog_players_path(@event), # URL は nil を指定
                  method: :get, # GET メソッドを指定 (POST など他のメソッドでも可)
                  class: "bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 text-sm flex items-center",
                  form: { data: { turbo_frame: "_top" } } # Turbo Frame を指定して画面遷移を防ぐ (必要に応じて)
                ) do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
      </svg>
      選手名編集
    <% end %>
    <%= render 'players/name_edit_dialog', event: @event %>
  </div>

  <div id="matches" class="space-y-10">
    <% @event.matches_grouped_by_sequence.each do |sequence_num, matches| %>
        <div class="match-group">
          <div class="bg-gray-100 py-2 px-4 rounded-t-lg border-b-2 border-indigo-500">
            <h2 class="text-xl font-bold text-gray-800"><%= sequence_num %></h2>
          </div>
            <div class="space-y-4 mt-4">
              <% matches.each do |match| %>
                <%= turbo_frame_tag "match_id_#{match.id}" do %>
                  <%= render 'matches/match_detail', match: match %>
                <% end %>
                <!-- スコア入力ダイアログ（初期状態は非表示） -->
                <%= turbo_frame_tag "dialog_match_id_#{match.id}" do %>
                  <%= render 'matches/score_dialog', match: match, status: @status %>
                <% end %>
              <% end %>
            </div>

        </div>

    <% end %>
  </div>
</div>
